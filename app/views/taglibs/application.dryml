<!-- Global taglib - these tags are shared across all subsites -->

<include src="paperclip" plugin="paperclip_with_hobo"/>

<def tag="movie-thumbnail" attrs="size">
  <img merge-attrs class='& "thumbnail " + (this.processed_movie.file?? "enabled" : "disabled")' src="#{base_url + this.thumbnail.url(size.to_sym)}"/>
</def>

