<show-page without-creator-link>
  
  <heading: replace>
    <img class='thumbnail' src="#{base_url + this.thumbnail.url(:large)}" if="thumbnail.file?"/>
    <heading restore/>
    <div class='tags'>
      Tags:
      <ul class="tags" id="tags">
        <li repeat="tag_list">
          <button>&times;</button>
          <span><%= this %></span>
        </li>
        <else>None</else>
      </ul>
      <tag-menu first="Add tag"/>
    </div>
    <div class='ref'>Ref: <view:reference-code/></div>
  </heading:>
  
  <after-add-form-heading:>
    Notice of new comments will be emailed to the film's submitter
  </after-add-form-heading:>
  
</show-page>